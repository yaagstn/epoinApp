<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBF4FB"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:contentDescription="Aplikasi Logo"
        android:src="@drawable/logo_pelanggaran" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="ePoin Aplikasi Pencatatan Pelanggaran"
        android:textAlignment="center"
        android:textColor="#FF000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMasuk"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="155dp"
        android:onClick="tampilActivityUtama"
        android:text="@string/btnmasuk"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:backgroundTint="#0B68AE"
        app:cornerRadius="8dp" />

</LinearLayout>
